<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="org.mg.mgweb.web.admin.tbleventos.TblEventosBrowse"
        focusComponent="table"
        lookupComponent="table"
        messagesPack="org.mg.mgweb.web.admin.tbleventos">
    <dsContext>
        <datasource id="tblEventosDs"
                    class="org.mg.mgweb.entity.TblEventos"
                    view="tblEventos-view"/>
        <collectionDatasource id="tblEventosesDs"
                              class="org.mg.mgweb.entity.TblEventos"
                              view="tblEventos-view">
            <query>
                <![CDATA[select e from mgweb_TblEventos e where extract(year from e.fecha) = (select c.periodoFiscalActivo from mgweb_TblConfiguraciones c where c.id = 1)]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <actions>
        <action id="save" invoke="save" icon="icons/ok.png" caption="mainMsg://actions.Ok" shortcut="CTRL-ENTER"/>
        <action id="cancel" invoke="cancel" icon="icons/cancel.png" caption="mainMsg://actions.Cancel"
                description="Esc"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split" height="100%" orientation="horizontal" reversePosition="true" width="100%">
            <vbox id="lookupBox" expand="table" height="100%" margin="false,true,false,false" spacing="true">
                <filter id="filter" applyTo="table" datasource="tblEventosesDs">
                    <properties include=".*"/>
                </filter>
                <table id="table"
                       width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="fecha"/>
                        <column id="descripcion"/>
                        <column id="idEventoTipo"/>
                        <column id="idCentroDeCosto"/>
                        <column id="porcentajeAporte"/>
                        <column id="porcentajeDonacion"/>
                    </columns>
                    <rows datasource="tblEventosesDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn" action="table.create"/>
                        <button id="editBtn" action="table.edit"/>
                        <button id="removeBtn" action="table.remove"/>
                    </buttonsPanel>
                </table>
            </vbox>
            <vbox id="editBox" height="100%" margin="false,false,false,true" expand="fieldGroupBox" spacing="true">
                <scrollBox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup" datasource="tblEventosDs">
                        <column width="250px">
                            <field property="descripcion"/>
                            <field property="fecha" resolution="DAY"/>
                            <field property="idEventoTipo"/>
                            <field property="idCentroDeCosto"/>
                            <field property="porcentajeAporte" width="50"/>
                            <field property="porcentajeDonacion" width="50" editable="false"/>
                        </column>
                    </fieldGroup>
                </scrollBox>
                <hbox id="actionsPane" spacing="true" visible="false">
                    <button id="saveBtn" action="save"/>
                    <button id="cancelBtn" action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
