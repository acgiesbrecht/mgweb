<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="org.mg.mgweb.web.admin.tblentidades.TblEntidadesBrowse"
        focusComponent="table"
        lookupComponent="table"
        messagesPack="org.mg.mgweb.web.admin.tblentidades">
    <dsContext>
        <datasource id="tblEntidadesDs"
                    class="org.mg.mgweb.entity.TblEntidades"
                    view="_local"/>
        <collectionDatasource id="tblEntidadesesDs"
                              class="org.mg.mgweb.entity.TblEntidades"
                              view="_local">
            <query>
                <![CDATA[select e from mgweb_TblEntidades e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <actions>
        <action id="save" invoke="save" icon="icons/ok.png" caption="mainMsg://actions.Ok" shortcut="CTRL-ENTER"/>
        <action id="cancel" invoke="cancel" icon="icons/cancel.png" caption="mainMsg://actions.Cancel"
                description="Esc"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split" height="100%" orientation="horizontal" reversePosition="true" width="100%">
            <vbox id="lookupBox" expand="table" height="100%" margin="false,true,false,false" spacing="true">
                <filter id="filter" applyTo="table" datasource="tblEntidadesesDs">
                    <properties include=".*"/>
                </filter>
                <table id="table"
                       width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="apellidos"/>
                        <column id="aporteMensual"/>
                        <column id="aporteSaldoAnterior"/>
                        <column id="box"/>
                        <column id="cantidadDeDependientesAportantes"/>
                        <column id="ctacte"/>
                        <column id="domicilio"/>
                        <column id="fechaBautismo"/>
                        <column id="fechaDefuncion"/>
                        <column id="fechaEntradaCongregacion"/>
                        <column id="fechaNacimiento"/>
                        <column id="fechaSalidaCongregacion"/>
                        <column id="isMiembroActivo"/>
                        <column id="mesFinAporte"/>
                        <column id="mesInicioAporte"/>
                        <column id="nombres"/>
                        <column id="razonSocial"/>
                        <column id="rucSinDv"/>
                    </columns>
                    <rows datasource="tblEntidadesesDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn" action="table.create"/>
                        <button id="editBtn" action="table.edit"/>
                        <button id="removeBtn" action="table.remove"/>
                    </buttonsPanel>
                </table>
            </vbox>
            <vbox id="editBox" height="100%" margin="false,false,false,true" expand="fieldGroupBox" spacing="true">
                <scrollBox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup" datasource="tblEntidadesDs">
                        <column width="250px">
                            <field property="apellidos"/>
                            <field property="aporteMensual"/>
                            <field property="aporteSaldoAnterior"/>
                            <field property="box"/>
                            <field property="cantidadDeDependientesAportantes"/>
                            <field property="ctacte"/>
                            <field property="domicilio"/>
                            <field property="fechaBautismo"/>
                            <field property="fechaDefuncion"/>
                            <field property="fechaEntradaCongregacion"/>
                            <field property="fechaNacimiento"/>
                            <field property="fechaSalidaCongregacion"/>
                            <field property="isMiembroActivo"/>
                            <field property="mesFinAporte"/>
                            <field property="mesInicioAporte"/>
                            <field property="nombres"/>
                            <field property="razonSocial"/>
                            <field property="rucSinDv"/>
                        </column>
                    </fieldGroup>
                </scrollBox>
                <hbox id="actionsPane" spacing="true" visible="false">
                    <button id="saveBtn" action="save"/>
                    <button id="cancelBtn" action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
