<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="org.mg.mgweb.web.admin.tblfacturascompra.TblFacturasCompraBrowse"
        focusComponent="table"
        lookupComponent="table"
        messagesPack="org.mg.mgweb.web.admin.tblfacturascompra">
    <dsContext>
        <datasource id="tblFacturasCompraDs"
                    class="org.mg.mgweb.entity.TblFacturasCompra"
                    view="_local"/>
        <collectionDatasource id="tblFacturasComprasDs"
                              class="org.mg.mgweb.entity.TblFacturasCompra"
                              view="_local">
            <query>
                <![CDATA[select e from mgweb_TblFacturasCompra e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <actions>
        <action id="save" invoke="save" icon="icons/ok.png" caption="mainMsg://actions.Ok" shortcut="CTRL-ENTER"/>
        <action id="cancel" invoke="cancel" icon="icons/cancel.png" caption="mainMsg://actions.Cancel"
                description="Esc"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split" height="100%" orientation="horizontal" reversePosition="true" width="100%">
            <vbox id="lookupBox" expand="table" height="100%" margin="false,true,false,false" spacing="true">
                <filter id="filter" applyTo="table" datasource="tblFacturasComprasDs">
                    <properties include=".*"/>
                </filter>
                <table id="table"
                       width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="condicionContado"/>
                        <column id="cuotasCredito"/>
                        <column id="fechaVencimientoCredito"/>
                        <column id="fechahora"/>
                        <column id="iva10"/>
                        <column id="iva5"/>
                        <column id="montoExentas"/>
                        <column id="montoIva10"/>
                        <column id="montoIva5"/>
                        <column id="nro"/>
                        <column id="nroTimbrado"/>
                        <column id="observacion"/>
                        <column id="razonSocial"/>
                        <column id="ruc"/>
                        <column id="vencimientoTimbrado"/>
                    </columns>
                    <rows datasource="tblFacturasComprasDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn" action="table.create"/>
                        <button id="editBtn" action="table.edit"/>
                        <button id="removeBtn" action="table.remove"/>
                    </buttonsPanel>
                </table>
            </vbox>
            <vbox id="editBox" height="100%" margin="false,false,false,true" expand="fieldGroupBox" spacing="true">
                <scrollBox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup" datasource="tblFacturasCompraDs">
                        <column width="250px">
                            <field property="condicionContado"/>
                            <field property="cuotasCredito"/>
                            <field property="fechaVencimientoCredito"/>
                            <field property="fechahora"/>
                            <field property="iva10"/>
                            <field property="iva5"/>
                            <field property="montoExentas"/>
                            <field property="montoIva10"/>
                            <field property="montoIva5"/>
                            <field property="nro"/>
                            <field property="nroTimbrado"/>
                            <field property="observacion"/>
                            <field property="razonSocial"/>
                            <field property="ruc"/>
                            <field property="vencimientoTimbrado"/>
                        </column>
                    </fieldGroup>
                </scrollBox>
                <hbox id="actionsPane" spacing="true" visible="false">
                    <button id="saveBtn" action="save"/>
                    <button id="cancelBtn" action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
