<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="org.mg.mgweb.web.admin.tblasientos.TblAsientosBrowse"
        focusComponent="table"
        lookupComponent="table"
        messagesPack="org.mg.mgweb.web.admin.tblasientos">
    <dsContext>
        <datasource id="tblAsientosDs"
                    class="org.mg.mgweb.entity.TblAsientos"
                    view="_local"/>
        <collectionDatasource id="tblAsientosesDs"
                              class="org.mg.mgweb.entity.TblAsientos"
                              view="_local">
            <query>
                <![CDATA[select e from mgweb_TblAsientos e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <actions>
        <action id="save" invoke="save" icon="icons/ok.png" caption="mainMsg://actions.Ok" shortcut="CTRL-ENTER"/>
        <action id="cancel" invoke="cancel" icon="icons/cancel.png" caption="mainMsg://actions.Cancel"
                description="Esc"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split" height="100%" orientation="horizontal" reversePosition="true" width="100%">
            <vbox id="lookupBox" expand="table" height="100%" margin="false,true,false,false" spacing="true">
                <filter id="filter" applyTo="table" datasource="tblAsientosesDs">
                    <properties include=".*"/>
                </filter>
                <table id="table"
                       width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="asientoManual"/>
                        <column id="fechahora"/>
                        <column id="monto"/>
                        <column id="observacion"/>
                    </columns>
                    <rows datasource="tblAsientosesDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn" action="table.create"/>
                        <button id="editBtn" action="table.edit"/>
                        <button id="removeBtn" action="table.remove"/>
                    </buttonsPanel>
                </table>
            </vbox>
            <vbox id="editBox" height="100%" margin="false,false,false,true" expand="fieldGroupBox" spacing="true">
                <scrollBox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup" datasource="tblAsientosDs">
                        <column width="250px">
                            <field property="asientoManual"/>
                            <field property="fechahora"/>
                            <field property="monto"/>
                            <field property="observacion"/>
                        </column>
                    </fieldGroup>
                </scrollBox>
                <hbox id="actionsPane" spacing="true" visible="false">
                    <button id="saveBtn" action="save"/>
                    <button id="cancelBtn" action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
