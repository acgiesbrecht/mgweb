<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://browseCaption"
        focusComponent="table"
        messagesPack="org.mg.mgweb.web.screens.tbleventodetalle">
    <data>
        <collection id="tblEventosDc"
                    class="org.mg.mgweb.entity.TblEventos"
                    view="tblEventos-view">
            <loader id="tblEventosDl">
                <query>
                    <![CDATA[select e from mgweb_TblEventos e where e.idEventoTipo.id = 1 and extract(year from e.fecha) = (select c.periodoFiscalActivo from mgweb_TblConfiguraciones c where c.id = 1) order by e.fecha desc]]>
                </query>
            </loader>
        </collection>
        <collection id="tblEntidadesDc"
                    class="org.mg.mgweb.entity.TblEntidades"
                    view="_minimal">
            <loader id="tblEntidadesDl">
                <query>
                    <![CDATA[select e from mgweb_TblEntidades e]]>
                </query>
            </loader>
        </collection>
        <collection id="tblCategoriasArticulosDc"
                    class="org.mg.mgweb.entity.TblCategoriasArticulos"
                    view="_minimal">
            <loader id="tblCategoriasArticulosDl">
                <query>
                    <![CDATA[select e from mgweb_TblCategoriasArticulos e]]>
                </query>
            </loader>
        </collection>
        <collection id="tblEventoDetallesDc"
                    class="org.mg.mgweb.entity.TblEventoDetalle"
                    view="tblEventoDetalle-view">
            <loader id="tblEventoDetallesDl">
                <query>
                    <![CDATA[select e from mgweb_TblEventoDetalle e]]>
                    <condition>
                        <c:jpql>
                            <c:where>e.idEvento = :evento</c:where>
                        </c:jpql>
                </condition>
                </query>
            </loader>
        </collection>
        <instance id="tblEventoDetalleDc"
                  class="org.mg.mgweb.entity.TblEventoDetalle"
                  view="tblEventoDetalle-view">
            <loader/>
            <collection id="tblAsientosDc" property="tblAsientos"/>
        </instance>
    </data>
    <actions>
        <action id="save" icon="icons/ok.png" caption="mainMsg://actions.Ok" shortcut="CTRL-ENTER"/>
        <action id="cancel" icon="icons/cancel.png" caption="mainMsg://actions.Cancel" description="Esc"/>
    </actions>
    <dialogMode height="600" width="800"/>
    <layout>
        <split id="split" height="100%" orientation="horizontal" reversePosition="true" width="100%" pos="40">
            <vbox id="lookupBox" expand="table" height="100%" margin="false,true,false,false" spacing="true">
                <lookupField id="lookupPickerFieldEvento"
                                   caption="Evento:" 
                                   optionsContainer="tblEventosDc"
                                   required="true" nullOptionVisible="false" width="450">
                </lookupField>
                <filter id="filter" applyTo="table" dataLoader="tblEventoDetallesDl">
                    <properties include=".*"/>
                </filter>
                <groupTable id="table"
                            width="100%"
                            dataContainer="tblEventoDetallesDc">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="fechahora"/>
                        <column id="idEntidad"/>
                        <column id="monto" align="RIGHT"/>
                        <column id="observacion"/>
                    </columns>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn" action="table.create"/>
                        <button id="editBtn" action="table.edit"/>
                        <button id="removeBtn" action="table.remove"/>
                    </buttonsPanel>
                </groupTable>
                <hbox id="lookupActions" spacing="true" visible="false">
                    <button action="lookupSelectAction"/>
                    <button action="lookupCancelAction"/>
                </hbox>
            </vbox>
            <vbox id="editBox" height="100%" margin="false,false,false,true" expand="tabSheetBox" spacing="true">
                <vbox id="tabSheetBox">
                    <tabSheet id="tabSheet" height="100%">
                        <tab id="mainTab" caption="msg://mainTab" margin="true">
                            <scrollBox id="fieldGroupBox"
                                       height="100%">
                                <form id="form" dataContainer="tblEventoDetalleDc">
                                    <column width="250px">
                                        <dateField id="fechahoraField" property="fechahora"/>
                                        <lookupPickerField id="idCategoriaArticuloField" property="idCategoriaArticulo" optionsContainer="tblCategoriasArticulosDc" width="200"/>
                                        <textField id="observacionField" property="observacion" width="400"/>
                                        <lookupPickerField id="idEntidadField" property="idEntidad" width="400" optionsContainer="tblEntidadesDc"/>
                                        <textField id="montoField" property="monto" width="100" datatype="int"/>
                                    </column>
                                </form>
                            </scrollBox>
                        </tab>
                    </tabSheet>
                </vbox>
                <hbox id="actionsPane" spacing="true" visible="false">
                    <button id="saveBtn" action="save"/>
                    <button id="cancelBtn" action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
